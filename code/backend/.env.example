# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# Database Configuration
DATABASE_URL=sqlite:///blockscore.db
# For PostgreSQL: postgresql://user:password@localhost:5432/blockscore
# For MySQL: mysql://user:password@localhost:3306/blockscore

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Blockchain Configuration
BLOCKCHAIN_PROVIDER_URL=http://localhost:8545
BLOCKCHAIN_FROM_ADDRESS=0x0000000000000000000000000000000000000000
BLOCKCHAIN_PRIVATE_KEY=
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Contract Addresses (optional)
CREDIT_SCORE_CONTRACT_ADDRESS=
LOAN_AGREEMENT_CONTRACT_ADDRESS=
IDENTITY_REGISTRY_CONTRACT_ADDRESS=
PAYMENT_PROCESSOR_CONTRACT_ADDRESS=

# Blockchain Network
BLOCKCHAIN_NETWORK_ID=1
BLOCKCHAIN_NETWORK_NAME=ethereum

# Security Configuration
BCRYPT_LOG_ROUNDS=12

# Rate Limiting
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_LOGIN=5 per minute

# Celery Configuration (optional)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MFA Configuration
MFA_ENCRYPTION_KEY=your-mfa-encryption-key-here

# SMS Provider (optional)
SMS_PROVIDER_URL=
SMS_API_KEY=

# Email Service (optional)
EMAIL_SERVICE_URL=
EMAIL_API_KEY=

# API Keys (optional)
CREDIT_BUREAU_API_KEY=
IDENTITY_VERIFICATION_API_KEY=

# Logging
LOG_LEVEL=INFO
