# BlockScore Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
SECRET_KEY=your_super_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
DEBUG=False

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://blockscore_user:your_password@localhost:5432/blockscore_dev
SQLALCHEMY_DATABASE_URI=postgresql://blockscore_user:your_password@localhost:5432/blockscore_dev
SQLALCHEMY_TRACK_MODIFICATIONS=False

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/2
RATELIMIT_STORAGE_URL=redis://localhost:6379/3

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=True

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@blockscore.com

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
BLOCKCHAIN_PROVIDER_URL=https://mainnet.infura.io/v3/your_project_id
BLOCKCHAIN_FROM_ADDRESS=0x_your_ethereum_address
BLOCKCHAIN_PRIVATE_KEY=0x_your_private_key
CREDIT_SCORE_CONTRACT_ADDRESS=0x_deployed_contract_address
LOAN_AGREEMENT_CONTRACT_ADDRESS=0x_deployed_contract_address
IDENTITY_REGISTRY_CONTRACT_ADDRESS=0x_deployed_contract_address
PAYMENT_PROCESSOR_CONTRACT_ADDRESS=0x_deployed_contract_address

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox  # sandbox, development, or production

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
SENTRY_DSN=https://your_sentry_dsn
LOG_LEVEL=INFO
ENABLE_METRICS=True

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_BLOCKCHAIN=True
ENABLE_MFA=True
ENABLE_RATE_LIMITING=True
ENABLE_AUDIT_LOGGING=True
ENABLE_COMPLIANCE_CHECKS=True

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_FOLDER=/tmp/blockscore/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# =============================================================================
# DEVELOPMENT SETTINGS (remove in production)
# =============================================================================
FLASK_DEBUG=False
TESTING=False
